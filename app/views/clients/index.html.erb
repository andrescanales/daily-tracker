<h2>Clients</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
    <tr>
      <th scope="row"><%=client.id%></th>
      <td><%= client.name %></td>
      <td><%= client.description %></td>
      <td><%= client.status %></td>
    </tr>
    <tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New", new_client_path, class: "col-1 btn btn-primary" %>
