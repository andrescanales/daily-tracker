<h2>New Project</h2>
<%= form_with(model: @project, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :client_id %>
    <%= f.collection_select(:client_id, @clients, :id, :name, { prompt: true }, class: "form-select")%>
  </div>
  <div class="mb-3">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
